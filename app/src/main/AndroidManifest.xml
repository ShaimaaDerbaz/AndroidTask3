<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shaimaaderbaz.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ToursActivity" />
        <activity android:name=".Activities.TransportationActivity" />
        <activity android:name=".Activities.WhyEgyptActivity" />
        <activity android:name=".Activities.ReligiousTourActivity" />
        <activity android:name=".Activities.CulturalTourActivity" />
        <activity android:name=".Activities.EntertainingTourActivity"></activity>
    </application>

</manifest>